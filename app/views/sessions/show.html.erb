<div data-role="page" data-dom-cache="false">
  
  <div data-role='header'>
    <h1>Session: <%= @session.token_id %></h1>
  </div><!-- /header -->
  
  <div role="main" class="ui-content">
    <ul data-role="listview" data-inset="true">
	  <% @tasks.each do |task| %>
	    <li>
          <a href=<%= task_path(task)+"/choice" %> data-icon="location"><%= task.name %></a>
		  <a href=<%= edit_task_path(task) + "&session_token=" + @session.token_id %> data-icon="edit">Edit</a>
        </li>
      <% end %>
      <li data-icon="location">
        <%= link_to 'New task', new_task_path %>
      </li>
    </ul>
  </div><!-- /main -->

  <div data-role='footer' style="text-align:center;">
    <%= link_to "Index", sessions_path %>
    <%= link_to 'Stop logging', tasks_stop_path, method: :post, :'data-role' => 'button',  :'data-icon' => 'power' %>
    <%= link_to 'Delete log', logs_destroy_all_path, method: :post, :'data-role' => 'button',  :'data-icon' => 'delete' %>
    <%= link_to 'Download as Excel', logs_index_path(:format => :xls) %>
  </div><!-- /footer -->

</div><!-- /page -->
