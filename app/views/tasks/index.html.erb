<!doctype html>
<html>
<head>
    <title>TaskWatch</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css">
    <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>

</head>
<body>
    <div data-role="page">
 
        <div data-role="header">
            <h1>TaskWatch</h1>
		</div><!-- /header -->
 
        <div role="main" class="ui-content">
            <ul data-role="listview" data-inset="true">
				<% @tasks.each do |task| %>
					<li>
						<a href="#"><%= task.name %></a><a href=<%= edit_task_path(task) %> data-role="button" data-icon="edit"></a>
					</li>
				<% end %>
				<li>
					<%= link_to 'New task', new_task_path %>
				</li>
            </ul>
        </div><!-- /content -->
 
        <div data-role="footer">
			<table>
				<tr>
					<td>Logging</td>
					<td><a href="#" data-role="button" data-icon="power">On</a></td>
					<td><a href="#" data-role="button" data-icon="power">Off</a></td>
				</tr>
			</table>
        </div><!-- /footer -->
 
    </div><!-- /page -->
</body>
</html>
